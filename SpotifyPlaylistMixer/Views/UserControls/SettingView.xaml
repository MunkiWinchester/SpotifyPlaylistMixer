<UserControl x:Class="SpotifyPlaylistMixer.Views.UserControls.SettingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:dataObjects="clr-namespace:SpotifyPlaylistMixer.DataObjects"
             xmlns:settingViewComponents="clr-namespace:SpotifyPlaylistMixer.Views.UserControls.SettingViewComponents"
             xmlns:userControls="clr-namespace:SpotifyPlaylistMixer.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <DataTemplate DataType="{x:Type dataObjects:User}">
            <Border Background="Transparent" BorderBrush="Black" BorderThickness="1" Margin="3">
                <Grid>
                    <settingViewComponents:UserView x:Name="us" />
                    <userControls:RemoveButtonView />
                    <!-- TODO: hinzufügen/entfernen -->
                </Grid>
            </Border>
        </DataTemplate>
        <DataTemplate DataType="{x:Type dataObjects:Playlist}">
            <Border Background="Transparent" BorderBrush="Black" BorderThickness="1" Margin="3">
                <settingViewComponents:PlaylistView x:Name="pl" />
                <!-- TODO: hinzufügen/entfernen -->
            </Border>
        </DataTemplate>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Label Grid.Row="0" Grid.Column="0" Content="Config Path:"/>
        <!-- TODO: dropdown (config ordner) -->
        <TextBox Grid.Row="0" Grid.Column="1" Margin="3"  Text="{Binding Path}" />
        <ScrollViewer Grid.Row="1" Grid.Column="0"  Grid.ColumnSpan="2" VerticalScrollBarVisibility="Auto">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Separator Grid.Row="0" Grid.Column="0"  Grid.ColumnSpan="2"/>
                <Label Grid.Row="1" Grid.Column="0" Content="Target Playlist:"/>
                <settingViewComponents:PlaylistView Grid.Row="1" Grid.Column="1" Margin="3" DataContext="{Binding Config.TargetPlaylist}"/>
                <Separator Grid.Row="2" Grid.Column="0"  Grid.ColumnSpan="2"/>
                <Label Grid.Row="3" Grid.Column="0" Content="Users:"/>
                <ItemsControl Grid.Row="3" Grid.Column="1" ItemsSource="{Binding Config.Users}" />
                <Separator Grid.Row="4" Grid.Column="0"  Grid.ColumnSpan="2"/>
                <Label Grid.Row="5" Grid.Column="0" Content="Source Playlists:"/>
                <ItemsControl Grid.Row="5" Grid.Column="1" ItemsSource="{Binding Config.SourcePlaylists}" />
                <Separator Grid.Row="6" Grid.Column="0"  Grid.ColumnSpan="2"/>
            </Grid>
        </ScrollViewer>
        <Button Grid.Column="1" Grid.Row="2" HorizontalAlignment="Right" 
            MinWidth="80" Margin="3" Content="Confirm" Command="{Binding ConfirmCommand}" />
    </Grid>
</UserControl>
