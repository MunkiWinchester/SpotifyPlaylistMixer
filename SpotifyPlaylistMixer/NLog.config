<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      autoReload="true"
      throwExceptions="false"
      internalLogLevel="Off" internalLogFile="c:\temp\nlog-internal.log">

    <targets>
        <target name="file" xsi:type="File"
                fileName="${basedir}\Log\${windows-identity:domain=false}.${shortdate}.log"
                layout="${longdate} | ${level:uppercase=true} | ${message}${onexception:|EXCEPTION OCCURRED\:${exception:format=tostring}}"
                deleteOldFileOnStartup="true" />
        <target name="console" xsi:type="ColoredConsole"
                layout="${longdate} | ${level:uppercase=true} | ${message}${onexception:|EXCEPTION OCCURRED\:${exception:format=tostring}}" />
        <wrapper-target xsi:type="BufferingWrapper" name="allOutputs">
            <wrapper-target xsi:type="PostFilteringWrapper">
                <compound-target xsi:type="SplitGroup">
                    <target-ref name="file" />
                    <target-ref name="console" />
                </compound-target>
            </wrapper-target>
        </wrapper-target>
    </targets>

    <rules>
        <logger name ="*" minlevel="Trace" writeTo="allOutputs"></logger>
    </rules>
</nlog>
